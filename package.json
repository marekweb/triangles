{
  "scripts": {
    "start": "parcel index.html",
    "serve": "serve",
    "format": "prettier --write --single-quote 'src/**/*.ts'",
    "bundle": "rollup build/run.js --file bundle.js --name 'bundle' --format esm",
    "build": "tsc && npm run bundle",
    "lint": "tslint -p tsconfig.json"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "devDependencies": {
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.1",
    "rollup": "^1.14.2",
    "serve": "^11.0.1",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1",
    "typestrict": "1.0.2"
  }
}
